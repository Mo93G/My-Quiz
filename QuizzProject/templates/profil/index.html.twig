{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">


    <form class="card mb-3" method='post'>
        <h3 class="card-header">{{app.user.Email}}</h3>
        <div class="card-body">
            <div class="form-group">
                <div class="form-floating mb-3">
                    <input name="email" type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
                    <label for="floatingInput">Email address {#parametre du email dans placeholder OU value#}</label>
                </div>
                <div class="form-floating">
                    <input name="password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Password {#parametre du pswd dans placeholder OU value#}</label>
                </div>
                {# {{dump(app.user)}} #}
                {# {{app.user.Email}} {{app.user.Password}} #}
            </div>
        </div>
        <button type="submit" class="btn btn-primary card-footer">Sauvegarder les modification</button>
    </form>
</div>

{% endblock %}
