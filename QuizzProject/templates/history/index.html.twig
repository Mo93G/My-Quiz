{% extends 'base.html.twig' %}

{% block title %}Hello HistoryController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div class = "card mt-3">
        <div class= "card-header text-center">Historique</div>
        <div class="card-body">

            <table class="table table-hover">
                <thead>
                    <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Score (20)</th>
                    {% if user != null %}
                        <th scope="col">Date</th>
                    {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for instance in history %}
                        <tr class="table-secondary">
                            <th scope="row">{{ instance["name"]}} {# parametre titre #}</th>
                            <td>{{ instance["categorie"]}} {# parametre catégorie #}</td>
                            <td>{{ instance["score"]}}{# parametre score #}</td>
                            {% if instance["date"] is defined %}
                                <td>{{ instance["date"]}} {# parametre date #}</td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                </tbody>
            </table>


        </div>
        <div class="card-footer ">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#">&laquo;</a>
                </li>

                {% for i in 1..6 %}
                    {% if i == 1 %}
                        <li class="page-item active">
                    {% else %}
                        <li class="page-item">
                    {% endif %}
                            <a class="page-link" href="#">{{i}}</a>
                        </li>
                {% endfor %}
                
                <li class="page-item">
                    <a class="page-link" href="#">&raquo;</a>
                </li>
            </ul>
        </div>
</div>
{% endblock %}
