{% extends 'base.html.twig' %}

{% block title %}Hello SearchController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <form class="d-flex mb-1">
        <input class="form-control me-sm-2" type="text" placeholder="Search">
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
    </form>
    

    <div class="btn-group" role="group" aria-label="Basic checkbox toggle button group ">
        {% for value in categories %}
            {% if value.id <= 5 %}
                <input type="checkbox" class="btn-check" id="btncheck{{value.id}}" autocomplete="off">
                <label class="btn btn-sm btn-primary" for="btncheck{{value.id}}">{{value.name}} {# parametre categorie#}</label>
            {% endif %}
        {% endfor %}



    </div>


    <div class = "card mt-3">
        <div class= "card-header">Resultat</div>
        <div class="card-body">
            

            <table class="table table-hover">
                <thead>
                    <tr>
                    <th scope="col">Titre</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Date de création</th>
                    </tr>
                </thead>
                <tbody>
                    {% for instance in ObjQuiz %}
                        <tr class="table-secondary">
                        <a href="/quiz/resolve/{{instance["id"]}}-1-1">
                            <th scope="row">{{ instance["name"]}} {# parametre titre #}</th>
                            <td>{{ instance["categorie"]}} {# parametre catégorie #}</td>
                            <td>{{ instance["date"]}} {# parametre date #}</td>
                            {# {% endif %} #}
                        </a>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>


        </div>
        <div class="card-footer">
            <ul class="pagination">
                <li class="page-item disabled">
                <a class="page-link" href="#">&laquo;</a>
                </li>
                <li class="page-item active">
                <a class="page-link" href="#">1</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="#">2</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="#">3</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="#">4</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="#">5</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="#">&raquo;</a>
                </li>
            </ul>
        </div>
    </div>    
</div>
{% endblock %}
