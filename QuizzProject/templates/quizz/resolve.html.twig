{% extends 'base.html.twig' %}

{% block title %}Hello QuizzController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="example-wrapper">
    <div class="card">
        <div class="card-header text-center">{{quiz_name}} (Question {{ question_number }})</div>
        <div class="card-body">
            <div class="text-center">
                <h3 class="mb-4">{{ question_name }}</h3>
            </div>

            <div class="d-grid gap-2">
                {% if count_question > question_number  %}
                    <form action="/quiz/resolve/{{idQuiz}}-{{question_number + 1 }}-{{try}}" method="POST">
                {% else %} 
                    <form action="/history" method="POST">
                {% endif %}

                        {% for value in reponse_fetch %}
                            <input type="radio" class="btn-check " name="{{value}}" id="{{ loop.index }}" >
                            <label class="btn btn-outline-primary" for="{{ loop.index }}">{{ value }}</label>
                        {% endfor %}
            </div>
        </div>

                        <div class="card-footer">
                            <div class="float-end">
                                {% if count_question > question_number  %}
                                        <input type="submit" value="Suivant" class="btn btn-primary">
                                {% else %} 
                                        <input type="submit" class= "btn btn-primary" ></button>
                                {% endif %}
                            </div>
                        </div>
                    </form>

    </div>



</div>
{% endblock %}
